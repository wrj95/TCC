<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
    	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- CSS -->
		<style>
			#divCabecalho{
				justify-content: flex-end;
			}

			#LinhaDivisoria{
				background-color: brown;
				height: 3px;	
			}
		</style>
		
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
		
		<!-- Refenciando o JQuery -->
    	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    	<script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
    	<script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
		
    	<!--JQuery Mask Plugin-->
    	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.js"></script>
    	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>

		<script type='text/javascript'>
			$(document).ready(function(){
				var url = window.location.href;
				var token = url.split('?token=')[1]

				$('#btnDetalhes').click(function(e){
					var selValue = $('input[name=radio]:checked').val(); //Catch value of line checked
					//Redirect to a Details Page
					window.location.href = '/user/solicitacao/'+ selValue + '?token=' + token;					
				})

				$('#btnSolicitar').click(function(e){
					windows.location.href = "/user/orcamento/solicitacao" + "?token=" + token; 
				})

				$('#btnanswer').click(function(e){
					window.location.href = "/user/orcamento/resposta" + "?token=" + token; 
				});

				$('#btnEndereço').click(function(e){
					window.location.href = "/user/address" + "?token=" + token; 
				});	

			})
		</script>

		<title>Minhas Solicitações</title>
	</head>
	<body>
		<div class="row col-xs-12 col-sm-12" id="divCabecalho">
			<button type="button" class="btn btn-sm" id="btnanswer">Orçamentos Recebidos</button>
			<button type="button" class="btn btn-sm" id="btnSolicitar">Solicitar Orçamentos</button>
			<button type="button" class="btn btn-sm" id="btnEndereço">Cadastrar Endereço</button>			
			<a href="10.1.0.101:80">
				<button type="button" class="btn btn-sm">Sair</button> 
			</a>
		</div>
			
		<div class="row col-sm-12" id="LinhaDivisoria"></div>
		<h1 class="col-sm-12">Meus Orçamentos</h1>
		<div class="container-fluid">
			<div class="row col-sm-12">
				<div class="col-sm-12">
					<table border="1">
						<thead>
							<th>Selecionar</th>
							<th>Titulo da Solicitação</th>
							<th>Status</th>
						</thead>
						<% for (var i=0;i<itens.length; i++){%>
						<tbody>
								<td><input type="radio" name="radio" id="radio" value="<%= itens[i].cod_solicitacao %>"/></td>
								<td><%= itens[i].tit_solicitacao %></td>
								<td><%= itens[i].status %></td>
						</tbody>
						<% } %>
					</table>
					<input type="button" class="col-sm-2" id="btnDetalhes" value="Ver Detalhes">
                </div>
			</div>
		</div>
	</body>
</html>