<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
    	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- CSS -->
		<style>
			#divCabecalho{
				justify-content: flex-end;
			}

			#LinhaDivisoria{
				background-color: brown;
				height: 3px;	
			}
		</style>
		
		<!-- Refenciando o JQuery -->
    	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    	<script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
    	<script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

		<!--JQuery Mask Plugin-->
    	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
        
        <script type="text/javascript">
            $(document).ready(function(){
				//Catch the ID user
				var url = window.location.href;
				var idSolicitacao = url.split('/')[5]
				var token = url.split('?token=')[1]
				
				$('#btnVoltar').click(function(e){
					window.location.href = "/user/solicitacao/" + "?token=" + token; 					
				})

				$('#btnSolicitar').click(function(e){
					window.location.href = "/user/orcamento/solicitacao" + "?token=" + token; 
				})

				$('#btnanswer').click(function(e){
					window.location.href = "/user/orcamento/resposta" + "?token=" + token; 
				});

				$('#btnEndereço').click(function(e){
					window.location.href = "/user/address" + "?token=" + token; 
				});	

				$('#btnSair').click(function(e){
					window.location.href = "http://buscafrete.net:80"; 
				});			

            })
        </script>

		<title>Detalhe da Solicitação</title>
	</head>
	<body>
		<div class="row col-xs-12 col-sm-12" id="divCabecalho">
			<button type="button" class="btn btn-sm" id="btnSolicitar">Solicitar Orçamentos</button>
			<button type="button" class="btn btn-sm" id="btnanswer">Orçamentos Recebidos</button>
			<button type="button" class="btn btn-sm" id="btnEndereço">Cadastrar Endereço</button>			
			<button type="button" class="btn btn-outline-primary" id="btnSolicitacoes">Minhas Solicitações</button>
			<button type="button" class="btn btn-sm" id="btnSair">Sair</button> 
		</div>
			
		<div class="row col-sm-12" id="LinhaDivisoria"></div>
		<h1 class="col-sm-12">Detalhes da Solicitação</h1>
		<div class="container">
			<div class="row">
				<div class="col-sm-4">
                    <label><b>Titulo do Orçamento:</b></label>
                    <p><%= detail.tit_solicitacao %></p>
				</div>
				<div class="col-sm-4">
					<label><b>Data da Mudança:</b></label>
					<p><%= detail.data %></p>
				</div>
				<div class="col-sm-4">
					<label><b>Hora mercada:</b></label>
                    <p><%= detail.hora %></p>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-4">                    
					<label><b>Estado de Origem:</b></label>
					<p><%= detail.uf_origem %></p>
				</div>
				<div class="col-sm-4">
					<label><b>Municipio de Origem:</b></label>
					<p><%= detail.mun_origem %></p>
				</div>
				<div class="col-sm-4">
					<label><b>Endereço de Origem:</b></label>
					<p><%= detail.end_origem_completo %></p>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-4">
					<label><b>Estado de Destino:</b></label>
					<p><%= detail.uf_destino %></p>
				</div>
				<div class="col-sm-4">
					<label><b>Municipio de Destino:</b></label>
					<p><%= detail.mun_destino %></p>
				</div>
				<div class="col-sm-4">
					<label><b>Endereço de Destino:</b></label>
                    <p><%= detail.end_destino_completo %></p>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-4">    
					<label><b>Valor do Bens:</b></label>
                    <p><%= detail.valor %></p>
				</div>
				<div class="col-sm-4">
                    <label><b>Status:</b></label>
					<p><%= detail.status %></p>
				</div>
			</div>
			
			<div class="row">
				<div class="col-sm-12">
					<label><b>Descrição:</b></label>
                    <p><%= detail.descricao %></p>
				</div>
			</div>
			<input type="button" class="col-sm-2" id="btnVoltar" value="Voltar">
		</div>
	</body>
</html>